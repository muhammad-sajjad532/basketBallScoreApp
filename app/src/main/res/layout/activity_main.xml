<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A2BA89"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Team A Section -->
    <TextView
        android:id="@+id/team_a_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Team A"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/team_b_label"
        app:layout_constraintHorizontalChainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/team_a_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="0"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/team_a_label"
        app:layout_constraintStart_toStartOf="@id/team_a_label"
        app:layout_constraintTop_toBottomOf="@id/team_a_label" />

    <Button
        android:id="@+id/team_a_plus_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="+1"
        app:layout_constraintEnd_toEndOf="@id/team_a_score"
        app:layout_constraintStart_toStartOf="@id/team_a_score"
        app:layout_constraintTop_toBottomOf="@id/team_a_score" />

    <Button
        android:id="@+id/team_a_plus_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="+3"
        app:layout_constraintEnd_toEndOf="@id/team_a_plus_one"
        app:layout_constraintStart_toStartOf="@id/team_a_plus_one"
        app:layout_constraintTop_toBottomOf="@id/team_a_plus_one" />

    <!-- Team B Section -->
    <TextView
        android:id="@+id/team_b_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Team B"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/team_a_label"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/team_b_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="0"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/team_b_label"
        app:layout_constraintStart_toStartOf="@id/team_b_label"
        app:layout_constraintTop_toBottomOf="@id/team_b_label" />

    <Button
        android:id="@+id/team_b_plus_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="+1"
        app:layout_constraintEnd_toEndOf="@id/team_b_score"
        app:layout_constraintStart_toStartOf="@id/team_b_score"
        app:layout_constraintTop_toBottomOf="@id/team_b_score" />

    <Button
        android:id="@+id/team_b_plus_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="+3"
        app:layout_constraintEnd_toEndOf="@id/team_b_plus_one"
        app:layout_constraintStart_toStartOf="@id/team_b_plus_one"
        app:layout_constraintTop_toBottomOf="@id/team_b_plus_one" />

    <!-- Reset Button -->
    <Button
        android:id="@+id/reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
